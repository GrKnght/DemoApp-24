<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_global.xml"
    app:startDestination="@id/destination_search_page">

    <action
        android:id="@+id/action_global_search_page"
        app:destination="@+id/destination_search_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out" />

    <fragment
        android:id="@+id/destination_search_page"
        android:name="ru.itis.demo24.search.ui.SearchFragment"
        android:label="destination_search_page" />

    <action
        android:id="@+id/action_global_song_details_page"
        app:destination="@+id/destination_song_details_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out" />

    <fragment
        android:id="@+id/destination_song_details_page"
        android:name="ru.itis.demo24.songdetails.ui.SongDetailsFragment"
        android:label="destination_search_page" />
</navigation>